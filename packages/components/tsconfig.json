{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "target": "ESNext",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["@types", "../../node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
